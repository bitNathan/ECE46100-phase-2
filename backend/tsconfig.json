{
  "compilerOptions": {
    "target": "es2017",                                 
    "module": "commonjs",                                
    "rootDir": "src",                                  
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,                                 
    //"types": ["jest", "node"],
    //"typeRoots": ["./node_modules/@types"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/tests/**/*.ts"],
  "exclude": ["node_modules"]
}